<Window x:Class="SuperBookToolsGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SuperBookTools - PDF Converter" 
        Height="600" Width="800"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="SuperBookTools PDF Converter" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- Source Directory -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Source Directory:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="txtSourceDir" VerticalAlignment="Center"/>
            <Button Grid.Column="2" Content="Browse..." Click="BtnBrowseSource_Click" Width="100"/>
        </Grid>

        <!-- Destination Directory -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Output Directory:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="txtDestDir" VerticalAlignment="Center"/>
            <Button Grid.Column="2" Content="Browse..." Click="BtnBrowseDest_Click" Width="100"/>
        </Grid>

        <!-- Options -->
        <GroupBox Grid.Row="3" Header="Options" Margin="5,10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <CheckBox x:Name="chkOcr" Content="Enable Japanese OCR (YomiToku AI)" VerticalAlignment="Center"/>
                <TextBlock Text="  (Requires Python environment)" Foreground="Gray" VerticalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <!-- Progress -->
        <Grid Grid.Row="4" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ProgressBar Grid.Column="0" x:Name="progressBar" Height="25" Margin="0,0,10,0"/>
            <TextBlock Grid.Column="1" x:Name="txtProgress" Text="Ready" VerticalAlignment="Center" Width="150"/>
        </Grid>

        <!-- Log Output -->
        <GroupBox Grid.Row="5" Header="Log" Margin="5">
            <TextBox x:Name="txtLog" 
                     IsReadOnly="True" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="#1E1E1E"
                     Foreground="#DCDCDC"/>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="btnStart" Content="Start Conversion" Width="150" Height="40" 
                    FontSize="14" FontWeight="Bold" Click="BtnStart_Click"
                    Background="#0078D4" Foreground="White"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="40"
                    Click="BtnCancel_Click" IsEnabled="False"/>
            <Button Content="Clear Log" Width="100" Height="40" Click="BtnClearLog_Click"/>
        </StackPanel>
    </Grid>
</Window>
